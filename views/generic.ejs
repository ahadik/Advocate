<html>
	<head>
		<title>Advocate</title>
		<link rel="stylesheet" href="/public/stylesheets/genericstyle.css" title="Advocate Styling" type="text/css" media="screen" charset="utf-8">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="/public/javascripts/jquery.scrollTo-1.4.3.1-min.js" charset="utf-8"></script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			
			ga('create', 'UA-52390719-1', 'auto');
			ga('send', 'pageview');
		</script>
		<script src="/node_modules/socket.io/node_modules/socket.io-client/dist/socket.io.js"></script>
	</head>
	<body>
		<div class="overlay" onclick="toggleDialogue()">
			<div class="popup" onclick="preventHide()">
				<h1 class="headTitle centerAlign">A MODAL WINDOW</h1>
				<div class="colorBar">
					<div class="pink colorBlock">
					</div>
					<div class="blue colorBlock">
					</div>
					<div class="aqua colorBlock">
					</div>
					<div class="yellow colorBlock">
					</div>
				</div>		
				<p>Some content is here</p>
			</div>
		</div>
		<div id="wrapper">
			<div id="nav" class="pink">
				<div class="gridWrapper height100 tableView">
					<div id="logo">
						<img src="resources/logo-web.png" />
					</div>
					<div id="navLeft" class="navText">
						<a href="/">Volunteer</a> | <a href="/login">Organize</a>
					</div>
					<div class="navWrapper">
						<div id="navRight">
							<%if(!auth){%>
								<a href="/login" class="navText" style="margin-right: 24px;">Log In</a>
								<a href="/register" class="smallButtonize" style="font-size: 14pt;">Sign Up!</a>
							<%}else{%>
								<div id="navProfilePic" style="background-image: url(<%=user.profile%>); background-size: cover;">
								</div>
								<div id="navName">
									<p class="navText"><%=user.firstname%> <%=user.lastname%></p>
								</div>
								<div id="navSettings" onclick="toggleDropdown('settingsDropdown');">
									<div id="settingsDropdown" class="dropDown">
										<div class="arrow-up dropArrow"></div>
									<!-- To make this work, as part of any authenticated session, you need to pass the following attributes: accounts- an array of objects for each account the user administers; activeAccount- the name of the account that the user is operating as with two properties, .name and .type. .name is the text name and .type is either 'personal', 'organization' or 'administration';  -->
										<%if(user.accounts.length) { %>
											<p class="dropdownHeader">Use Advocate as:</p>
											<ul>
												<%for(account in user.accounts){%>
													<%if(user.accounts[account].name != user.activeAccount.name){%><li class="orgsDropdownEntry"><img src="<%=user.accounts[account].profile%>" width="25px" height="25px"/> <%=user.accounts[account].name%></li><%}%>
												<%}%>
											</ul>
											<%if(user.activeAccount.type == 'organization'){%>
												<div class="dropDownDivide"></div>
												<ul>
													<li><a href="/create" class="dropdownText">Create an event</a></li>
													<li><a href="/track" class="dropdownText">Track your volunteers</a></li>
												</ul>
												<div class="dropDownDivide"></div>
											<%}else if(user.activeAccount.type == 'administration'){%>
												<div class="dropDownDivide"></div>
												<ul>
													<li><a href="/track" class="dropdownText">Track your members</a></li>
												</ul>
												<div class="dropDownDivide"></div>
											<%}%>
										<%}%>
										<ul>
											<li><a href="/help" class="dropdownText">Help</a></li>
											<li><a href="/settings" class="dropdownText">Settings</a></li>
											<li><a href="/logout" class="dropdownText">Log Out</a></li>
										</ul>
									</div>
								</div>
								<div id="navNotifications" onclick="toggleDropdown('notifDropdown');">
									<div id="notifDropdown" class="dropDown">
										<div class="arrow-up dropArrow"></div>
										<!-- To make this work, you need to add an attribute to the userData entries for notifications, which will include: .title, .body, .summary(100 chars), .viewed(true or false), .profile(org prof pic) -->
										<%for(notif in user.notifs){%>
											<div class="notifWrapper">
												<div class="notifLeft" style="background-image: url(<%=user.notifs[notif].account.profile%>);">
												</div>
												<div class="notifRight <%if(user.notifs[notif].viewed){%>notifViewed<%}else{%>notifUnviewed<%}%>">
													<h3><%=user.notifs[notif].account.name%></h3>
													<a href="" style="font-weight:400;"><%=user.notifs[notif].title%></a>
													<p><%=user.notifs[notif].body%></p>
												</div>
											</div>
										<%}%>
									</div>
								</div>
							<%}%>
						</div>
					</div>
				</div>
			</div>
			<div id="content" class="gridWrapper">
				<h1>This is Header 1</h1>
				<h2>This is Header 2</h2>
				<h3>This is Header 3</h3>
				<p>This is a paragraph, or body text.</p>
				<a href="/">This is a hyperlink.</a>
				<br>
				<br>
				<id class="pink buttonize" onclick="toggleDialogue();">Button</id>
				<br>
				<br>
				<br>
			</div>
			<div class="colorBar">
				<div class="pink colorBlock">
				</div>
				<div class="blue colorBlock">
				</div>
				<div class="aqua colorBlock">
				</div>
				<div class="yellow colorBlock">
				</div>
			</div>
			<div id="footer" class="pink banner">
				<div class="gridWrapper">
					<div class="logo">
						<p class="footerText">2014 ADVOCATE. ALL RIGHTS RESERVED</p>
					</div>
				</div>
			</div>
		</div>
		<script src="/public/javascripts/js_generic.js"></script>
	</body>
</html>
