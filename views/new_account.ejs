<html>
	<head>
		<title>Advocate</title>
		<link rel="stylesheet" href="/public/stylesheets/style.css" title="Advocate Styling" type="text/css" media="screen" charset="utf-8">
		<link rel="stylesheet" href="/public/stylesheets/register.css" title="Advocate Styling" type="text/css" media="screen" charset="utf-8">
		<!--<link rel="stylesheet" href="/public/stylesheets/styleMobile.css" title="Advocate Styling" type="text/css" media='only screen and (-webkit-min-device-pixel-ratio: 2)' charset="utf-8">-->

		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="/public/javascripts/jquery.scrollTo-1.4.3.1-min.js" charset="utf-8"></script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-52390719-1', 'auto');
			ga('send', 'pageview');
		</script>
		<script src="/node_modules/socket.io/node_modules/socket.io-client/dist/socket.io.js"></script>
		<script src="/public/javascripts/form.js"></script>
		<script src="/public/javascripts/form_ui.js"></script>
	</head>
	<body>
		<div id="wrapper">
			<div id="header">
				<div id="nav" class="pink">
					<div class="navCenter">
						<div class="logo">
							<div class="logoWrap">
								<img src="resources/logo-web.png" />
							</div>
						</div>
						<div id="menu">
							<ul>
								<li><a href="#about" onclick="$.scrollTo('#about',500);">ABOUT US</a></li>
								<li><a href="#features" onclick="$.scrollTo('#features',500);">FEATURES</a></li>
								<li class="buttonize"><a onclick="toggleDialogue()">GET IN TOUCH</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div id="formContainer">
				<h2 class="light textCenter">SIGN UP</h2>
				<div class="colorBar">
					<div class="pink colorBlock"></div>
					<div class="dark colorBlock"></div>
					<div class="blue colorBlock"></div>
					<div class="yellow colorBlock"></div>
				</div>
				<div id="formWrapper">
					<form role="form" action="/register" method="post">
						<div class="formBlock">
							<div class="left">
							<h2>for us</h2>
							</div>
							<div class="right">
							<input type="text" name="username" placeholder="username" class="formInput field width45 floatLeft" required>
							<input type="password" name="password" placeholder="password" class="formInput field width45 floatRight" required>
							<input type="text" placeholder="organization name" name="orgName"  class="formInput field width100" required>
							<div class="registerRadio">
								<p class="floatLeft rightMarginMed medGray">registered 501 c3?</p>
								<input type="radio" name="registeredNPO" value="yes" class="validateInterest" required><span class="listAlign medGray">yes</span>
								<input type="radio" name="registeredNPO" value="no" class="validateInterest"><span class="listAlign medGray">no</span><br>
							</div>
							<input type="website" placeholder="website" name="website" class="formInput field width100" required>
							<input type="email" placeholder="email" name="email" class="formInput field width100" required>
							</div>
						</div>
						<div class="formBlock">
							<div class="left">
							<h2>for the volunteers</h2>
							</div>
							<div class="right">							
								<input type="text" placeholder="ZIP code" name="zip" class="formInput field floatRight width25" required>
								<input type="email" placeholder="contact email address" name="orgEmail" class="formInput field width50 floatLeft" required>
								<input type="tel" placeholder="phone number" name="telephone" class="formInput field width45 floatRight" required>
								<textarea type="text" placeholder="your mission statement" name="mission" class="formInput box floatLeft width100" required></textarea>
								<textarea type="text" placeholder="tell us your story in 3 sentences" name="story" class="formInput box floatLeft width100" required></textarea>
								<button  id="registerSubmit" type="submit" class="pink">SUBMIT</button>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div id="footer" class="pink">
				<div class="innerContainer navCenter">
					<div class="logo">
						<p class="footerText">2014 ADVOCATE. ALL RIGHTS RESERVED</p>
					</div>
					<div id="menu">
						<ul>
							<li><a href="#about" onclick="$.scrollTo('#about',500);">ABOUT US</a></li>
							<li><a href="#features" onclick="$.scrollTo('#features',500);">FEATURES</a></li>
							<li><a href="#contact" onclick="$.scrollTo('#contact',500);">GET IN TOUCH</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
