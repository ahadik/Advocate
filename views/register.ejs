<html>
	<head>
		<title>Advocate</title>
		<link rel="stylesheet" href="/public/stylesheets/style.css" title="Advocate Styling" type="text/css" media="screen" charset="utf-8">
		<link rel="stylesheet" href="/public/stylesheets/register.css" title="Advocate Styling" type="text/css" media="screen" charset="utf-8">
		<!--<link rel="stylesheet" href="/public/stylesheets/styleMobile.css" title="Advocate Styling" type="text/css" media='only screen and (-webkit-min-device-pixel-ratio: 2)' charset="utf-8">-->

		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script src="/public/javascripts/jquery.scrollTo-1.4.3.1-min.js" charset="utf-8"></script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-52390719-1', 'auto');
			ga('send', 'pageview');
		</script>
		<script src="/node_modules/socket.io/node_modules/socket.io-client/dist/socket.io.js"></script>
		<script src="/public/javascripts/form.js"></script>
		<script src="/public/javascripts/form_ui.js"></script>
	</head>
	<body>
		<div id="wrapper">
			<div id="header">
				<div id="nav" class="pink">
					<div class="navCenter">
						<div class="logo">
							<div class="logoWrap">
								<img src="resources/logo-web.png" />
							</div>
						</div>
						<div id="menu">
							<ul>
								<li><a href="#about" onclick="$.scrollTo('#about',500);">ABOUT US</a></li>
								<li><a href="#features" onclick="$.scrollTo('#features',500);">FEATURES</a></li>
								<li class="buttonize"><a href="/login">LOG IN</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div id="formContainer">
				<h1 class="headTitle centerAlign">SIGN UP</h1>
				<div class="colorBar">
					<div class="pink colorBlock"></div>
					<div class="dark colorBlock"></div>
					<div class="blue colorBlock"></div>
					<div class="yellow colorBlock"></div>
				</div>
				<form role="form" action="/register" method="post" id="registerForm">
					<div id="formWrapper">
						<div class="formSection">
							<p class="centerAlign">Have an account? <a href="/login">Log in</a></p>
							<div id="twitterAuth" onclick="location.href='/auth/twitter';">
								<div class="buttonTable">
									<div class="buttonContent">
										<div class="buttonLogo" id="twitter"></div>
										<h3 class="buttonText">log in with twitter</h3>
									</div>
								</div>
							</div>
							<p class="caption">we'll never post anything without your permission!</p>
							<div class="optionDivider">
								<div class="dividerWrapper">
									<div class="dividerLine">
									</div>
									<h1 class="dividerText">OR</h1>
									<div class="dividerLine">
									</div>
								</div>
							</div>
							<div class="modalForm width100">
								<input type="text" id="firstName" name="firstName" placeholder="first name" class="formtext width48 validateInterest" required>
								<input type="text" id="lastName" name="lastName" placeholder="last name" class="formtext width48 floatRight validateInterest" required><br>
								<input type="text" id="affiliate" name="affiliate" placeholder="affiliated schools or organizations" class="formtext width100 validateInterest" required><br>
								<input type="text" id="username" name="username" placeholder="username" onblur="checkUsername();" class="formtext width100 validateInterest" required><br>
								<input type="email" id="emailAddress" name="emailAddress" placeholder="email" class="formtext width100 validateInterest" required><br>
								<input type="password" id="password" name="password" placeholder="password" class="formtext width100 validateInterest" required>
							</div>
						</div>
					</div>
					<div id="buttonContainer">
						<button type="submit" class="buttonize pink centerBox">SUBMIT</button>
					</div>
				</form>
			</div>
			<div id="footer" class="pink">
				<div class="innerContainer navCenter">
					<div class="logo">
						<p class="footerText">2014 ADVOCATE. ALL RIGHTS RESERVED</p>
					</div>
					<div id="menu">
						<ul>
							<li><a href="#about" onclick="$.scrollTo('#about',500);">ABOUT US</a></li>
							<li><a href="#features" onclick="$.scrollTo('#features',500);">FEATURES</a></li>
							<li><a href="#contact" onclick="$.scrollTo('#contact',500);">GET IN TOUCH</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
